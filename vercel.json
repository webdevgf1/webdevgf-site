{
  "functions": {
    "api/*.js": {
      "memory": 1024,
      "maxDuration": 60
    }
  },
  "rewrites": [
    {
      "source": "/marketplace",
      "destination": "/public/marketplace.html"
    },
    {
      "source": "/chatbots",
      "destination": "/public/chatbots.html"
    }
  ],
  "redirects": [
    {
      "source": "/marketplace.html",
      "destination": "/marketplace",
      "permanent": true
    },
    {
      "source": "/chatbots.html",
      "destination": "/chatbots", 
      "permanent": true
    }
  ],
  "routes": [
    {
      "src": "/api/telegram-webhook/(.*)",
      "dest": "/api/telegram-webhook.js"
    },
    {
      "src": "/api/deploy-telegram-bot",
      "dest": "/api/deploy-telegram-bot.js"
    }
  ]
}
